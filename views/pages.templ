package views

import "time"

templ CalendarPage(year int, month time.Month) {
	@sidebarScaffold(0, []templ.Component{
		calendar(year, month),
		vacationList(exampleVacations),
	})
}

templ TimetableClassPage(date time.Time) {
	@sidebarScaffold(1, []templ.Component{
		classSelectList(exampleClasses),
		timetable(date),
	})
}

